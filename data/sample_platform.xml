<?xml version="1.0"?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid/simgrid.dtd">
<platform version="4.1">
    <zone id="AS0" routing="Full">

        <!-- Intel(R) Xeon(R) Gold 6240R CPU @ 2.40GHz -->
        <host id="submit_node" speed="48Gf" core="24">
            <prop id="type" value="submit"/>
            <prop id="ram" value="192GB"/>
            <disk id="disk_submit" read_bw="200MBps" write_bw="200MBps">
                <prop id="size" value="500000GiB"/>
                <prop id="mount" value="/"/>
            </disk>
        </host>

        <!-- Intel(R) Xeon(R) Gold 6240R CPU @ 2.40GHz -->
        <host id="slurm_head_node" speed="48Gf" core="24">
            <prop id="type" value="slurm_head"/>
            <prop id="ram" value="192GB"/>
            <disk id="disk_submit" read_bw="200MBps" write_bw="200MBps">
                <prop id="size" value="500000GiB"/>
                <prop id="mount" value="/"/>
            </disk>
        </host>

        <!-- Intel(R) Xeon(R) Gold 6240R CPU @ 2.40GHz -->
        <host id="slurm_compute_node_1" speed="48Gf" core="24">
            <prop id="type" value="slurm_compute"/>
            <prop id="ram" value="192GB"/>
        </host>

        <!-- Intel(R) Xeon(R) Gold 6240R CPU @ 2.40GHz -->
        <host id="slurm_compute_node_2" speed="48Gf" core="24">
            <prop id="type" value="slurm_compute"/>
            <prop id="ram" value="192GB"/>
        </host>

        <!-- Intel(R) Xeon(R) Gold 6240R CPU @ 2.40GHz -->
        <host id="slurm_compute_node_3" speed="48Gf" core="24">
            <prop id="type" value="slurm_compute"/>
            <prop id="ram" value="192GB"/>
        </host>

        <!-- Intel(R) Xeon(R) Gold 6240R CPU @ 2.40GHz -->
        <host id="slurm_compute_node_4" speed="48Gf" core="24">
            <prop id="type" value="slurm_compute"/>
            <prop id="ram" value="192GB"/>
        </host>

        <!-- Intel(R) Xeon(R) Gold 6240R CPU @ 2.40GHz -->
        <host id="slurm_compute_node_5" speed="48Gf" core="24">
            <prop id="type" value="slurm_compute"/>
            <prop id="ram" value="192GB"/>
        </host>

        <link id="single_backbone_link" bandwidth="100GBps" latency="100us"/>

        <route src="submit_node" dst="slurm_head_node">
            <link_ctn id="single_backbone_link"/>
        </route>

        <route src="submit_node" dst="slurm_compute_node_1">
            <link_ctn id="single_backbone_link"/>
        </route>

        <route src="submit_node" dst="slurm_compute_node_2">
            <link_ctn id="single_backbone_link"/>
        </route>

        <route src="submit_node" dst="slurm_compute_node_3">
            <link_ctn id="single_backbone_link"/>
        </route>

        <route src="submit_node" dst="slurm_compute_node_4">
            <link_ctn id="single_backbone_link"/>
        </route>

        <route src="submit_node" dst="slurm_compute_node_5">
            <link_ctn id="single_backbone_link"/>
        </route>

        <route src="slurm_head_node" dst="slurm_compute_node_1">
            <link_ctn id="single_backbone_link"/>
        </route>

        <route src="slurm_head_node" dst="slurm_compute_node_2">
            <link_ctn id="single_backbone_link"/>
        </route>

        <route src="slurm_head_node" dst="slurm_compute_node_3">
            <link_ctn id="single_backbone_link"/>
        </route>

        <route src="slurm_head_node" dst="slurm_compute_node_4">
            <link_ctn id="single_backbone_link"/>
        </route>

        <route src="slurm_head_node" dst="slurm_compute_node_5">
            <link_ctn id="single_backbone_link"/>
        </route>
        

    </zone>
</platform>
